<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- Console Appender: Logs to System.out -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- Log message format -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Root Logger: Sets the default logging level and appender -->
  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
